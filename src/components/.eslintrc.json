{
  "env": {
    "browser": true,           // Enables browser global variables (e.g., window, document)
    "node": true,              // Enables Node.js global variables (e.g., process)
    "es2021": true             // Supports ES2021 features
  },
  "extends": [
    "react-app",               // Inherits rules from Create React App's ESLint config
    "plugin:react/recommended", // Adds recommended React-specific rules
    "plugin:@typescript-eslint/recommended" // Adds recommended TypeScript rules
  ],
  "globals": {
    "webpack": "readonly"      // Declares webpack as a global to avoid 'webpack is not defined' errors
  },
  "parser": "@typescript-eslint/parser", // Specifies the TypeScript parser
  "parserOptions": {
    "ecmaVersion": 12,         // Supports ES2021
    "sourceType": "module",    // Uses ES modules
    "ecmaFeatures": {
      "jsx": true              // Enables JSX parsing
    }
  },
  "plugins": [
    "react",                   // Enables React plugin
    "@typescript-eslint"       // Enables TypeScript ESLint plugin
  ],
  "rules": {
    "react/prop-types": "off", // Disable prop-types as we're using TypeScript
    "no-unused-vars": "warn",  // Warn on unused variables instead of error
    "@typescript-eslint/no-unused-vars": ["warn"], // Same for TypeScript
    "no-console": "off"        // Allow console.log for debugging
  },
  "settings": {
    "react": {
      "version": "detect"      // Automatically detect the React version
    }
  }
}